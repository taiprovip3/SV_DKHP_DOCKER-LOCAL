<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ErukaLearn | Department CRUD | DEPARTMENT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/ad778f42b3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/employee.css" type="text/css">
    <link rel="stylesheet" href="../css/common.css" type="text/css">
    <link rel="stylesheet" href="../css/button.css" type="text/css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <a href="/employee" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-sign"></i></i>&ensp;Trang chủ</div>
                </a>
                <a href="/employee-crud-student" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-user-graduate"></i>&ensp;Sinh viên</div>
                </a>
                <a href="/employee-crud-class" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-sign"></i></i>&ensp;Lớp danh Nghĩa</div>
                </a>
                <a href="/employee-crud-teacher" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-chalkboard-teacher"></i>&ensp;Giáo viên</div>
                </a>
                <a href="/employee-crud-course" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fab fa-discourse"></i>&ensp;Khoá học</div>
                </a>
                <!-- <a href="/employee-crud-department" class="text-decoration-none"> -->
                <div class="p-3 navigation-item-active text-wrap"><i class="fab fa-shopware"></i>&ensp;Khoa</div>
                <!-- </a> -->
                <a href="/employee-crud-majors" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-wrench"></i>&ensp;Ngành</div>
                </a>
                <a href="/employee-crud-department_announcement" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-bell"></i>&ensp;Thông báo Khoa</div>
                </a>
                <a href="/employee-crud-unit_class" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-window-restore"></i>&ensp;Lớp học phần</div>
                </a>
                <a href="/employee-crud-time_table" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-calendar-day"></i>&ensp;Thời khoá biểu</div>
                </a>
                <a href="/employee-crud-debt" class="text-decoration-none">
                <div class="p-3 navigation-item text-wrap"><i class="fas fa-hand-holding-usd"></i>&ensp;Công nợ</div>
                </a>
            </div>
            <div class="col-lg-9 position-relative overflow-auto" style="max-height: 100vh;">
                <div>
                    <% if(signal) { %>
                        <% if(signal == "INSERT_SUCCESS") { %>
                            <script>swal({title: "Goob jobs!", text: "Thao tác dữ liệu thành công", icon: "success"})</script>
                        <% } else {
                            if(signal == "INTERNAL_SERVER_ERROR") { %>
                                <script>swal({title: "Internal Server Error",text: "Undefined resolution!", icon: "warning", dangerMode: true});</script>
                            <% }
                        }
                    } %>
                </div>
                <p class="fw-bold"><a href="/employee">Home</a> / <a href="javascript:void(0)">Manage department</a></p>
                <div class="d-flex">
                    <form action="/employee-crud-class-excel-import" enctype="multipart/form-data" method="POST">
                    <div id="left_action"  class="d-flex align-items-center">
                        <button type="button" class="import-button" data-bs-toggle="modal" data-bs-target="#addModal">Thêm khoa mới <i class="fas fa-pen-square text-warning"></i></button>
                        <div>&emsp;</div>
                        <button class="import-button" type="button"><label for="excel_file" class="crs">Nhập từ file excel</label> <i class="text-success fas fa-file-excel text-success"></i></button>
                        <input type="file" name="excel_file" id="excel_file" class="d-none" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                        <div>&emsp;</div>
                        <button class="d-none import-button" id="btn-import" type="submit">Import <i class="fas fa-cloud-upload"></i></button>
                        <button class="import-button" type="button" id="btn-export-excel">Xuất bảng excel <i class="fas fa-file-export text-white"></i></button>
                    </div>
                    </form>
                    <div id="right_action" style="position: absolute;">
                        <button id="action_delete">Xoá</button>
                        <button id="action_update">Sửa</button>
                    </div>
                </div>
                <br>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-secondary text-nowrap">
                            <tr>
                                <th>STT</th>
                                <th>Mã khoa</th>
                                <th>Tên khoa</th>
                                <th>Chọn</th>
                            </tr>
                        </thead>
                        <form id="myForm" method="post" enctype="multipart/form-data">
                        <% for(let i=0; i<LIST_DEPARTMENT.length ;i++) { %>
                            <tr class="small">
                                <td><%= i + 1 %></td>
                                <td><%= LIST_DEPARTMENT[i].ma_khoa %></td>
                                <td><%= LIST_DEPARTMENT[i].ten_khoa %></td>
                                <td>
                                    <input type="checkbox" name="<%= LIST_DEPARTMENT[i].ma_khoa %>" id="<%= LIST_DEPARTMENT[i].ma_khoa %>" class="myCheckBoxClass">
                                </td>
                            </tr>
                        <% } %>
                        </form>
                    </table>
                </div>
            </div>
        </div>
    </div>


<!-- Add Modal -->
<div class="modal" id="addModal">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
    
            <!-- Modal Header -->
            <div class="modal-header">
            <p>Thêm khoa</p>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
    
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/ad-crud-add-department" method="post" enctype="multipart/form-data" id="form_add_department">
                    <input type="text" placeholder="Tên khoa.." class="w-100" autofocus name="ten_khoa" id="ten_khoa">
                </form>
            </div>
    
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="btn_add_department">Thêm</button>
                <button type="button" data-bs-dismiss="modal">Close</button>
            </div>
    
        </div>
    </div>
</div>
<!-- Edit Modal -->
<div class="modal" id="editModal">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
    
            <!-- Modal Header -->
            <div class="modal-header">
            <p>Sửa thông tin</p>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
    
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/ad-crud-update-department" method="post" enctype="multipart/form-data" id="form_upadte_department">
                    <input type="text" name="ma_khoa2" id="ma_khoa2" hidden>
                    <input type="text" placeholder="Tên khoa..." class="w-100" autofocus name="ten_khoa2" id="ten_khoa2" required>
            </div>
    
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" id="btn_update_department">Cập nhật</button>
                </form>
                <button type="button" data-bs-dismiss="modal">Close</button>
            </div>
    
        </div>
    </div>
</div>
<div class="position-fixed bottom-0 text-success small p-2">
    Secure <i class="fas fa-shield-alt"></i>
</div>
</body>
<script>
const pathNodejs = '<%= process.env.EJS_API_URL %>';
$(document).ready(function() {
    const tab_length = $(".col-lg-9").width();
    const right_action_length = $("#right_action").width();
    const minus = tab_length - right_action_length;
    $("#right_action").css("left", minus);
    $("#excel_file").on("change", function(){
        $("#btn-import").removeClass('d-none');
    });
    $("#btn-export-excel").click(function() {
        window.location.href = pathNodejs+"/employee-crud-export?entityName=department";
    });
});
</script>
</html>