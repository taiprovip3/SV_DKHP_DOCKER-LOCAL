<script>
    $.ajax({
        type: "GET",
        url: pathNodejs+"/employee/student/getStudents",
        contentType: 'application/json',
        success: function(data) {
            var firstObj = data[0];
            var headerRow = $('<tr></tr>');
            for (var key in firstObj) {
                var headerCell = $('<th></th>').text(key);
                headerRow.append(headerCell);
            }
            $('#student-table').prepend(headerRow);
            data.forEach(function(item) {
                var row = $(`<tr class="crs"></tr>`);
                row.click(function() {
                    $('#student-table tr').removeClass('bg-primary');
                    $(this).addClass('bg-primary');
                    selectedRow = item.ma_sinh_vien;
                    console.log('Selected student data:', selectedRow);
                });
                for (var key in item) {
                    var cell = $('<td></td>').text(item[key]);
                    row.append(cell);
                }
                $('#student-table').append(row);
            });           
        }, error: function(error) {
            console.error(error);
        }
    });


</script>