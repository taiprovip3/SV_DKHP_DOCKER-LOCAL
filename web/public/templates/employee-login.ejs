    <link rel="stylesheet" href="../css//button.css" type="text/css">
    <style>
        body {
            padding: 0;
            margin: 0;
            background-image: url("https://res.cloudinary.com/dopzctbyo/image/upload/v1682548306/sv_dkhp/smooth-white-wave-background_52683-55288_lrdmiw.jpg");
            background-size: cover;
            background-position: center;
        }
        #testbg{
            font-size: larger;
            background-image: url('https://res.cloudinary.com/dopzctbyo/image/upload/v1682548338/sv_dkhp/pngtree-color-creative-texture-glitter-dots-elements-png-image_4609964_mcc3uz.jpg');
            background-size: contain;
            box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
        }
    </style>
</head>
<body>
    <div>
        <% if(error == "WRONG_PASSWORD") { %>
            <script>swal({title: "Invalid",text: "Username or password",icon: "warning", dangerMode: true});</script>
        <% } else {
            if(error == "INVALID_SESSION") { %>
            <% } 
            if(error == "INTERNAL_SERVER_ERROR") { %>
                <script>swal({title: "Internal Server Error",text: "Something went wrong",icon: "warning", dangerMode: true});</script>
            <% }
        } %>   
    </div>
    <div class="position-fixed top-50 start-50 translate-middle justify-content-center align-items-center text-center p-5 w-100">
        <div class="d-flex">
            <div class="col-8">
                <img src="https://res.cloudinary.com/dopzctbyo/image/upload/v1682548368/sv_dkhp/uwp-development_oyst45.webp" alt="employee-iuh-background-logo">
            </div>
            <div id="testbg" class="col-4 p-3 align-self-center">
                <img src="https://res.cloudinary.com/dopzctbyo/image/upload/v1682548386/sv_dkhp/logo-loginb2c44cab-5_p9l4z9.png" alt="logo-iuh">
                <p style="color: rgb(13, 204, 204);">Cổng quản lý thông tin</p>
                <i class="fab fa-leanpub text-danger"></i>
                <p class="fs-4" style="color: rgb(13, 204, 204);">ĐĂNG NHẬP TÀI KHOẢN</p>
                <hr>
                <form action="employee-login" method="post" enctype="multipart/form-data">
                    <input type="text" placeholder="Nhập mã số nhân viên" class="my-1 form-control p-3" name="username" value="21052002" required autofocus>
                    <input type="password" placeholder="Nhập mật khẩu" class="my-1 form-control p-3" name="password" value="123123az" minlength="8" required>
                    <div><button type="submit" class="w-100 text-white p-3 fw-bold import-button" style="background-color: #3CBCBC;">Đăng nhập</button></div>
                </form>
                <div class="text-primary p-2 text-center" style="font-size: small;">
                    Secure <i class="fas fa-shield-alt"></i>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    const remindBackup = localStorage.getItem('remindBackup');
    if(remindBackup && remindBackup === 'reminded') {
        localStorage.setItem('remindBackup', true);
    }
</script>
</html>